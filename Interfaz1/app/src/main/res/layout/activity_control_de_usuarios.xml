<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frutas"
    tools:context="@IngresarDatos">


    <EditText
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:autofillHints="122dp"
        android:ems="10"
        android:hint="@string/nombre"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="87dp" />

    <EditText
        android:id="@+id/apellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombre"
        android:layout_alignEnd="@id/nombre"
        android:layout_alignRight="@id/nombre"
        android:layout_margin="10dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/apellido"
        android:inputType="textPersonName"
        android:text="apellidos"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="177dp" />

    <EditText
        android:id="@+id/altura"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:layout_below="@id/apellido"
        android:layout_alignEnd="@id/apellido"
        android:layout_alignRight="@id/apellido"
        android:layout_margin="10dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="altura"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="261dp" />

    <EditText
        android:id="@+id/peso"
        android:layout_width="68dp"
        android:layout_height="37dp"
        android:layout_below="@id/altura"
        android:layout_alignEnd="@id/altura"
        android:layout_alignRight="@id/altura"
        android:layout_margin="10dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="peso"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="265dp" />

    <EditText

        android:id="@+id/edad"
        android:layout_width="87dp"
        android:layout_height="43dp"
        android:layout_below="@id/peso"
        android:layout_alignEnd="@id/peso"
        android:layout_alignRight="@id/peso"
        android:layout_margin="10dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="edad"
        android:inputType="textPersonName"
        tools:ignore="DuplicateIds"
        tools:layout_editor_absoluteX="246dp"
        tools:layout_editor_absoluteY="261dp" />

    <Button
        android:id="@+id/ingresarDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edad"
        android:layout_alignEnd="@id/edad"
        android:layout_alignRight="@id/edad"
        android:layout_margin="50dp"
        android:onClick="registrar"
        android:text="registrar"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="573dp" />

    <CheckBox
        android:id="@+id/confirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/botonEliminarCuenta"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:text="@string/he_leido_y_acepto_los_terminos_y_condiciones_de_alimapp"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="479dp" />

    <Button
        android:id="@+id/botonModificarCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/edad"
        android:layout_alignEnd="@id/edad"
        android:layout_alignRight="@id/edad"
        android:layout_margin="50dp"
        android:text="mofificar"
        tools:layout_editor_absoluteX="289dp"
        tools:layout_editor_absoluteY="51dp" />

    <Button
        android:id="@+id/botonEliminarCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ingresarDatos"
        android:layout_marginStart="440dp"
        android:layout_marginLeft="-180dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"

        android:text="Eliminar"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="651dp" />


</RelativeLayout>