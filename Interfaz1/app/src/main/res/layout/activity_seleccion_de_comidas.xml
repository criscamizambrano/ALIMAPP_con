<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/portada1"
    tools:context="com.example.interfaces.SeleccionDeComidas">

    <TextView
        android:id="@+id/menuDeComidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4CAF50"
        android:onClick="irDesayuno"
        android:text="@string/seleccionDeComidas"
        tools:layout_editor_absoluteX="173dp"
        tools:layout_editor_absoluteY="77dp" />

    <Button
        android:id="@+id/butonDesayuno"
        android:layout_width="90dp"
        android:layout_height="83dp"
        android:layout_below="@id/menuDeComidas"
        android:layout_alignEnd="@id/menuDeComidas"
        android:layout_alignRight="@id/menuDeComidas"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="-190dp"
        android:layout_marginRight="-215dp"
        android:layout_marginBottom="30dp"
        android:background="#4CAF50"
        android:filterTouchesWhenObscured="true"
        android:onClick="irDesayuno"
        android:text="@string/desayuno"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="211dp" />

    <Button
        android:id="@+id/buttonAlmuerzo"
        android:layout_width="90dp"
        android:layout_height="79dp"
        android:layout_below="@id/butonDesayuno"
        android:layout_alignEnd="@id/butonDesayuno"
        android:layout_alignRight="@id/butonDesayuno"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="30dp"
        android:background="#4CAF50"
        android:filterTouchesWhenObscured="true"
        android:onClick="irAlmuerzo"
        android:text="@string/almuerzo"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="158dp" />

    <Button
        android:id="@+id/butonCena"
        android:layout_width="90dp"
        android:layout_height="79dp"
        android:layout_below="@id/buttonAlmuerzo"
        android:layout_alignEnd="@id/buttonAlmuerzo"
        android:layout_alignRight="@id/buttonAlmuerzo"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="30dp"
        android:background="#4CAF50"
        android:filterTouchesWhenObscured="true"
        android:onClick="irCena"
        android:text="@string/cena"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="394dp" />


</RelativeLayout>
