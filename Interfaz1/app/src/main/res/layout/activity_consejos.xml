<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/corazon"
    tools:context="com.example.interfaces.Consejos">

    <TextView
        android:id="@+id/consejos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/consejos"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="11dp"
        android:textColor="@android:color/background_dark"/>

    <CheckBox
        android:id="@+id/consejos1"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/consejos"
        android:layout_alignEnd="@id/consejos"
        android:layout_alignRight="@id/consejos"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="-215dp"
        android:layout_marginRight="-215dp"
        android:layout_marginBottom="30dp"
        android:text="@string/respetas_los_horarios_de_las_comidas"
        android:textColor="@android:color/background_dark"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="58dp" />

    <CheckBox
        android:id="@+id/consejos2"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/consejos1"
        android:layout_alignEnd="@id/consejos1"
        android:layout_alignRight="@id/consejos1"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="30dp"
        android:text="@string/evitar_los_excesos_de_grasas_satura"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="8dp"
        android:textColor="@android:color/background_dark"

        android:layout_marginEnd="0dp" />

    <CheckBox
        android:id="@+id/consejos3"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/consejos2"
        android:layout_alignEnd="@id/consejos2"
        android:layout_alignRight="@id/consejos2"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="3dp"
        android:text="@string/evitar_los_excesos_de_sal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="8dp"
        android:textColor="@android:color/background_dark"

        android:layout_marginEnd="0dp" />

    <CheckBox
        android:id="@+id/consejos4"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/consejos3"
        android:layout_alignEnd="@id/consejos3"
        android:layout_alignRight="@id/consejos3"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="3dp"
        android:text="@string/evitar_los_excesos_de_azucar"

        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="8dp"
        android:textColor="@android:color/background_dark"/>

    <CheckBox
        android:id="@+id/consejos5"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/consejos4"
        android:layout_alignEnd="@id/consejos4"
        android:layout_alignRight="@id/consejos4"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="3dp"
        android:text="@string/realizar_actividad_fisica_acorde_a_su_fisico_edad_y_preferencias"

        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="8dp"
        android:textColor="@android:color/background_dark"/>

    <CheckBox
        android:id="@+id/consejos6"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/consejos5"
        android:layout_alignEnd="@id/consejos5"
        android:layout_alignRight="@id/consejos5"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="3dp"
        android:text="@string/dormir_mas_de_7_horas"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="8dp"
        android:textColor="@android:color/background_dark"/>

    <CheckBox
        android:id="@+id/consejos7"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/consejos6"
        android:layout_alignEnd="@id/consejos6"
        android:layout_alignRight="@id/consejos6"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="3dp"
        android:text="@string/beba_muchos_liquidos"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="8dp"
        android:textColor="@android:color/background_dark"/>

    <CheckBox
        android:id="@+id/consejos8"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/consejos7"
        android:layout_alignEnd="@id/consejos7"
        android:layout_alignRight="@id/consejos7"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="3dp"
        android:text="@string/procure_comer_despacio"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="8dp"
        android:textColor="@android:color/background_dark"/>

    <CheckBox
        android:id="@+id/consejos9"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/consejos8"
        android:layout_alignEnd="@id/consejos8"
        android:layout_alignRight="@id/consejos8"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="3dp"
        android:text="@string/lave_bien_los_alimentos_antes_de_su_preparacion"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="8dp"
        android:textColor="@android:color/background_dark"/>


</RelativeLayout>
